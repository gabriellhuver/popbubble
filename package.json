{
  "name": "popbubble",
  "version": "1.0.0",
  "description": "A fun bubble popping game with multiple difficulty levels",
  "main": "docs/index.html",
  "scripts": {
    "version:patch": "node update-version.js patch",
    "version:minor": "node update-version.js minor", 
    "version:major": "node update-version.js major",
    "version:show": "node -e \"console.log(require('./version.json').version)\"",
    "build": "node update-version.js patch && echo 'Build completed'",
    "dev": "echo 'Open docs/index.html in your browser'",
    "deploy": "git add . && git commit -m 'Version $(node -e \"console.log(require('./version.json').version)\")' && git push"
  },
  "keywords": [
    "game",
    "bubble",
    "pop",
    "arcade",
    "casual",
    "html5",
    "javascript"
  ],
  "author": "Gabriel Lhuver",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gabriellhuver/popbubble.git"
  },
  "homepage": "https://gabriellhuver.github.io/popbubble/",
  "engines": {
    "node": ">=12.0.0"
  }
}
